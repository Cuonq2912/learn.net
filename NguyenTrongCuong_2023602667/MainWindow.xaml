<Window x:Class="NguyenTrongCuong_2023602667.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BaiKiemTraThuongXuyen2"
        Height="500" Width="800">

    <!-- ====================== WINDOW RESOURCES ====================== -->
    <Window.Resources>

        <!-- Style cho Header của DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <!-- Template TRUE CIRCLE BUTTON (Ellipse giữ nguyên nhưng Width=Height tạo hình tròn) -->
        <Style x:Key="CircleButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="Green"/>
            <Setter Property="Background" Value="Gold"/>
            <Setter Property="BorderBrush" Value="Goldenrod"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"
                                     Stroke="{TemplateBinding BorderBrush}"
                                     StrokeThickness="2"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <!-- ====================== END RESOURCES ====================== -->



    <Grid Background="White" Margin="10,10,10,-1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="#F5F5DC" Padding="10" Margin="10,32,10,0" Height="322" VerticalAlignment="Top" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Quản lý thông tin nhân viên"
                           FontSize="22" FontWeight="Bold"
                           Foreground="Blue"
                           HorizontalAlignment="Center"
                           Margin="0,-50,0,60"/>

                <!-- Form nhập thông tin -->
                <Grid Grid.Row="1" Margin="0 10 0 10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="74.253"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Mã nhân viên:" Margin="0,-31,0,31"/>
                    <TextBox x:Name="txtMaNV" Grid.ColumnSpan="3" Margin="16,-31,184,27" Grid.Column="1"/>

                    <TextBlock Text="Họ tên:" Margin="0,-1,0,35" Grid.RowSpan="3"/>
                    <TextBox x:Name="txtHoTen" Grid.Column="1" Margin="16,-3,184,40" Grid.RowSpan="3" Grid.ColumnSpan="3"/>

                    <TextBlock Text="Ngày sinh:" Grid.Row="2" Margin="0,6,0,2"/>
                    <DatePicker x:Name="dateNgaySinh" Grid.Row="2" Grid.Column="1"
                                Margin="16,7,0,10" Width="200" Grid.ColumnSpan="3"
                                HorizontalAlignment="Left"/>

                    <TextBlock Text="Giới tính:" Grid.Row="3" Margin="0,0,0,11"/>
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="94,0,0,11">
                        <RadioButton x:Name="chooseNam" Content="Nam" IsChecked="True"/>
                        <RadioButton x:Name="chooseNu" Content="Nữ" Width="55"/>
                    </StackPanel>

                    <TextBlock Text="Phòng ban:" Grid.Row="4" Margin="0,10,0,11"/>
                    <ComboBox x:Name="choosePhongBan" Grid.Row="4" Grid.Column="1"
                              Width="201" Height="23"
                              Margin="16,2,183,12" Grid.ColumnSpan="3" RenderTransformOrigin="0.414,0.42">
                        <ComboBoxItem Content="Tổ chức"/>
                        <ComboBoxItem Content="Kế hoạch"/>
                        <ComboBoxItem Content="Vật tư"/>
                    </ComboBox>

                    <TextBlock Text="Hệ số lương:" Grid.Row="5" Margin="0,3,0,-3"/>
                    <TextBox x:Name="txtHeSoLuong" Grid.Row="5" Grid.Column="1"
                             Margin="16,0,183,0" Grid.ColumnSpan="3" Height="21" VerticalAlignment="Center"/>
                </Grid>

                <!-- Bảng DataGrid -->
                <DataGrid BorderBrush="Green" BorderThickness="2"
                          Grid.Row="2" x:Name="dataGrid"
                          AutoGenerateColumns="False"
                          Margin="0 10 0 0"
                          RowHeight="28">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã NV" Binding="{Binding MaNV}" Width="*"/>
                        <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}" Width="*"/>
                        <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" Width="*"/>
                        <DataGridTextColumn Header="Phòng ban" Binding="{Binding PhongBan}" Width="*"/>
                        <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh}" Width="*"/>
                        <DataGridTextColumn Header="Tuổi" Binding="{Binding Tuoi}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Nút hình tròn (sử dụng Style trong Window.Resources) -->
        <Border BorderBrush="Green" BorderThickness="2"
        Grid.Row="1" HorizontalAlignment="Center"
        Margin="0,359,0,-81" Padding="10,1" Width="739">

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center">

                <Button Content="Nhập" Width="50" Height="50" Margin="10"
                Style="{StaticResource CircleButtonStyle}"
                Click="Nhap_Click"/>

                <Button Content="Window2" Width="100" Height="40" Margin="10"
                Style="{StaticResource CircleButtonStyle}"
                Click="Window2_Click"/>

            </StackPanel>

        </Border>


    </Grid>
</Window>
